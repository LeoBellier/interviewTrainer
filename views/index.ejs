<div class="mx-auto max-w-5xl py-8">
  <!-- encabezado -->
  <header class="mb-6">
      <h2 class="text-2xl font-semibold"><%= title %></h2>
  </header>

  <!-- grid de tarjetas -->
  <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% (problems || []).forEach(function(problem) { %>
      <li>
        <a href="/problem/<%= encodeURIComponent(problem.id) %>"
           class="block rounded-2xl border border-gray-200 bg-white p-5 shadow-sm transition
                  hover:shadow-md hover:border-gray-300">
          <h3 class="text-lg font-medium text-gray-900">
            <%= problem.title %>
          </h3>

          <% if (problem.shortDescription) { %>
            <p class="mt-2 text-sm text-gray-600">
              <%= problem.shortDescription %>
            </p>
          <% } %>

          <div class="mt-4 flex flex-wrap items-center gap-2 text-xs text-gray-600">
            <% if (problem.difficulty) { %>
              <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5">
                <%= problem.difficulty %>
              </span>
            <% } %>
            <% if (Array.isArray(problem.topics) && problem.topics.length) { %>
              <span class="truncate">â€¢ <%= problem.topics.slice(0, 3).join(", ") %></span>
            <% } %>
          </div>
        </a>
      </li>
    <% }); %>
  </ul>
</div>